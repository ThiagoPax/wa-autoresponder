<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bgDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Status -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inativo"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/textPrimary"
        android:layout_marginBottom="12dp"/>

    <!-- Ações superiores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btnOpenSettings"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Permissões"
            android:textAllCaps="false"
            android:backgroundTint="@color/cardDark"
            android:textColor="@color/textPrimary"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Atualizar log"
            android:textAllCaps="false"
            android:backgroundTint="@color/cardDark"
            android:textColor="@color/textPrimary"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Limpar log"
            android:textAllCaps="false"
            android:backgroundTint="@color/cardDark"
            android:textColor="@color/textPrimary"/>
    </LinearLayout>

    <!-- Log -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false">

        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:textIsSelectable="true"
            android:padding="8dp"
            android:background="@color/cardDark"/>
    </ScrollView>

    <!-- Botão ON/OFF grande e redondo na parte baixa -->
    <Button
        android:id="@+id/btnPower"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="OFF"
        android:textAllCaps="false"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:background="@drawable/bg_power_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>
</LinearLayout>
